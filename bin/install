#!/usr/bin/env bash

set -e
set -o pipefail

[ -n "$ASDF_INSTALL_VERSION" ] || (>&2 echo 'Missing ASDF_INSTALL_VERSION' && exit 1)
[ -n "$ASDF_INSTALL_PATH" ] || (>&2 echo 'Missing ASDF_INSTALL_PATH' && exit 1)

install_tfsec() {
  local version=$1
  local install_path=$2
  local bin_install_path="$install_path/bin"
  local download_url
  download_url="$(get_download_url "$version")"

  mkdir -p "${bin_install_path}"

  local bin_path="${bin_install_path}/tfsec"
  echo "Downloading tfsec from ${download_url}"
  curl -L "$download_url" -o "$bin_path"
  chmod +x "$bin_path"
}

get_arch() {
    echo "$(uname | tr '[:upper:]' '[:lower:]')-amd64"
}

get_download_url() {
  local version="$1"
  local platform
  platform="$(get_arch)"
  echo "https://github.com/liamg/tfsec/releases/download/v${version}/tfsec-${platform}"
}

install_tfsec "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
